extends layout
block content
  form(method="post").form-horizontal
    legend login
    div.form-group
      label(for="username") account
      div.controls
        input(type="text", name="username").form-control#username
    div.form-group
      label(for="password") password
      div.controls
        input(type="password", name="password").form-control#password
    div.form-group
      button(type="submit").btn.btn-primary login
