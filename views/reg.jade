extends layout
block content
  form(method="post").form-horizontal
    legend user reg
    div.form-group
      label(for="username") account
      div.controls
        input(type="text", name="username").form-control#username
        p.help-block to login
    div.form-group
      label(for="password") password
      div.controls
        input(type="password" name="password").form-control#password
    div.form-group
      label(for="password-repeat") password again
      div.controls
        input(type="password" name="password-repeat").form-control#password-repeat
    div.form-group
      button(type="submit").btn.btn-primary reg
